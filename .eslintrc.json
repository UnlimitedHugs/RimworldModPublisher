{
	"env": {
		"node": true,
		"browser": false,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab", {
			"SwitchCase": 1
		}],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"eqeqeq": ["error"],
		"no-unused-vars": ["warn", {
			"vars": "all"
		}],
		"no-console": "off",
		"no-useless-escape": "off",
		"no-empty": "off"
	}
}